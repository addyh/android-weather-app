<?xml version="1.0" encoding="utf-8"?>
<!--
    ForecastFragment, a fragment containing a FrameLayout with a ListView
    Gets loaded into activity_main.xml's FrameLayout with id "container"

    i.e. The first thing the user sees when the app is started
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ForecastFragment">

    <!--
        ArrayAdapter mForecastAdapter gets loaded into this ListView,
        containing all of the weather data.

        Will be populated by the TextView list_item_forecast_textview from list_item_forecast.xml
    -->
    <ListView
        android:id="@+id/listview_forecast"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</FrameLayout>